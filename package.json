{
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "postbuild": "cp src/plyrplus.css dist/plyrplus.css",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "plyrplus",
  "author": "abhithory",
  "module": "dist/plyrplus.esm.js",
  "size-limit": [
    {
      "path": "dist/plyrplus.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/plyrplus.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@rollup/plugin-image": "^3.0.2",
    "@size-limit/preset-small-lib": "^9.0.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "file-loader": "^6.2.0",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-css-only": "^4.3.0",
    "size-limit": "^9.0.0",
    "style-loader": "^3.3.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "hls.js": "^1.4.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abhithory/PlyrPlus"
  }
}
